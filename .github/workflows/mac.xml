name: macOS
on: 
  workflow_dispatch:
defaults:
  run:
    shell: bash

jobs:
  debug: # give your job a name
    runs-on: macos-latest
    steps:
    - uses: actions/checkout@v2 # use the correct version of the action
    - name: Setting the Environment Up.
      env:
        NGROK_AUTH_TOKEN: ${{ secrets.NGROK_AUTH_TOKEN }}
      run: source setup.sh "010206" "010206" "$NGROK_AUTH_TOKEN"
    - name: ngrok is now listening to VNC connections on...
      run: curl --silent http://127.0.0.1:4040/api/tunnels | jq '.tunnels[0].public_url'
    - name: Setup tmate Session
      run: nohup tmate -S /tmp/tmate.sock new-session -d # run tmate in the background
    - name: Get tmate Session Info
      run: tmate -S /tmp/tmate.sock show-messages # get the ssh connection string

name: macOS
on: 
  workflow_dispatch:
defaults:
  run:
    shell: bash

jobs:
  build: 
    runs-on: macos-latest
    steps:
    - uses: actions/checkout@v3 # use the correct version of the action
    - name: Setting the Environment Up.
      env:
        NGROK_AUTH_TOKEN: ${{ secrets.NGROK_AUTH_TOKEN }}
      run: source setup.sh "010206" "010206" "$NGROK_AUTH_TOKEN"
    - name: ngrok is now listening to VNC connections on...
      run: curl --silent http://127.0.0.1:4040/api/tunnels | jq '.tunnels[0].public_url'
    - name: setting resolution...
      run: source setresolution.sh "1280 720"
    - name: Setup tmate Session
      uses: lardex668/action-tmate@v3
